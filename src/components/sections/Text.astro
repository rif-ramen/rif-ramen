---
import { PortableText } from "astro-portabletext";
import groq from "groq";

export const fragment = groq`
    title,
    body[] { ... }
`;

const { title, body } = Astro.props;
---

<section
  class="container site-grid my-12"
  data-controller="stagger-entrance"
  data-stagger-entrance-stagger-value="0.1"
>
  <h2 class="col-span-full lg:col-span-7 type-subheading">{title}</h2>
  {
    body && (
      <PortableText
        class="col-span-full lg:col-span-4 lg:col-start-9 type-body mt-10 lg:mt-0"
        value={body}
      />
    )
  }
</section>
